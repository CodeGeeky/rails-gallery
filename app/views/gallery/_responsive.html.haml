#rg-gallery.rg-gallery
  .rg-thumbs
    // Elastislide Carousel Thumbnail Viewer
    .es-carousel-wrapper
      .es-nav
        %span.es-nav-prev
          = t('rgallery.previous')
        %span.es-nav-next
          = t('rgallery.next')
      .es-carousel
        %ul
          - photos.all.each do |photo|
            %li
              %a{href:"#"}
                = image_tag photo.thumb, :"data-large" => "/assets/#{photo.path}", :alt => photo.alt, :"data-description" => photo.title